{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    // new transform jsx를 쓰기위한 옵션
    "jsx": "react-jsx",
    "emitDeclarationOnly": false,
    "composite": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
