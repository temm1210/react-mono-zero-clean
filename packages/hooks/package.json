{
  "name": "@project/react-hooks",
  "private": true,
  "version": "1.0.1",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/es/",
    "dist/cjs/"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && yarn build:types && yarn build:babel",
    "build:babel": "yarn build:cjs && yarn build:es",
    "build:es": "cross-env BABEL_ENV=esm babel src --extensions .ts -d dist/es --source-maps",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --extensions .ts -d dist/cjs --source-maps",
    "build:types": "tsc --outDir ./dist",
    "start": "nodemon --watch src/**/*.ts --exec ts-node src/index.ts",
    "clean": "rimraf dist",
    "test:watch": "jest --watch --maxWorkers=1",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "@project/utils": "^1.0.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "ts-jest": "^28.0.5"
  },
  "resolutions": {
    "@types/react": "^18.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
